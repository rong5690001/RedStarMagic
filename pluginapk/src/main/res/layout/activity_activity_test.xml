<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChajianActivity">

    <Button
        android:id="@+id/btnLaunchPluginActivity"
        style="@style/BtnStyle"
        android:onClick="onClick"
        android:text="Activity生命周期测试" />

    <Button
        android:id="@+id/btnStartSingleTop"
        style="@style/BtnStyle"
        android:onClick="onClick"
        android:text="启动singleTopActivity" />

    <Button
        android:id="@+id/btnStartSingleTask"
        style="@style/BtnStyle"
        android:onClick="onClick"
        android:text="启动singleTaskActivity" />

    <Button
        android:id="@+id/btnStartSingleInstance"
        style="@style/BtnStyle"
        android:onClick="onClick"
        android:text="启动singleInstanceActivity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/ic_launcher"
        android:gravity="center"
        android:text="当前运行在插件环境下"
        android:textColor="@android:color/holo_red_light" />

</LinearLayout>